<div class="container">
  <div class="row">
     <div align="center">
<h1 class="title">
	<%= @post.title %>
</h1>

<p class="date"><em>Submitted <%= time_ago_in_words(@post.created_at) %> ago</p></em>
	
<%= image_tag @post.image.url(:medium), class: 'img-thumbnail' %>
	

<p class="body">
 <%= @post.body %>
</p>

<% if user_signed_in? %>
<%= link_to 'Edit', edit_post_path(@post), class: 'glyphicon glyphicon-edit btn btn-primary' %>
<%= link_to 'Delete', post_path, method: :delete, data: {confirm: 'Are you sure?'}, class: 'glyphicon glyphicon-trash btn btn-danger'  %>
<% end %>
<h2><%= @post.comments.count %>Comments</h2>
<%= render @post.comments %>
<h3>Join Discussion</h3>
<hr>
<%= render "comments/form" %>
</div>
   </div>
	</div>

